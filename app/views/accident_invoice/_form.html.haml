.col-sm-12
  .d-flex.justify-content-center
    .col-md-6.col-md-offset-3.col-sm-12.col-sm-offset-1
      .invoice-form
        .form-body
          = simple_form_for @invoice, url: accident_invoice_index_path, method: :post do |f|
            = f.input :name, label: 'Name', input_html: { class: 'form-control' }
            = f.file_field :invoice, as: :file, label: 'File', input_html: { class: 'form-control' }, multiple: true, name: "invoices[invoice][]"
            %br
            = f.submit 'Save', class: 'btn'
            = link_to 'Cancel', accident_invoice_index_path, class: 'btn'
